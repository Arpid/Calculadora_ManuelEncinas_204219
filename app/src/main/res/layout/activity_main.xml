<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="214dp" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="115dp" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_end="97dp" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_begin="269dp" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_begin="350dp" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline11"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_begin="436dp" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline12"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_begin="521dp" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline13"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_begin="611dp" />

    <Button
        android:id="@+id/buttonNueve"
        android:layout_width="85dp"
        android:layout_height="75dp"
        android:layout_marginTop="265dp"
        android:text="9"
        app:layout_constraintBottom_toTopOf="@+id/buttonSeis"
        app:layout_constraintEnd_toStartOf="@+id/buttonSuma"
        app:layout_constraintStart_toEndOf="@+id/buttonOcho"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/buttonTres"
        android:layout_width="85dp"
        android:layout_height="75dp"
        android:text="3"
        app:layout_constraintBottom_toTopOf="@+id/buttonBorrar"
        app:layout_constraintEnd_toStartOf="@+id/buttonMultiplicacion"
        app:layout_constraintStart_toEndOf="@+id/buttonDos"
        app:layout_constraintTop_toBottomOf="@+id/buttonSeis" />

    <Button
        android:id="@+id/buttonDos"
        android:layout_width="85dp"
        android:layout_height="75dp"
        android:text="2"
        app:layout_constraintBottom_toTopOf="@+id/buttonCero"
        app:layout_constraintEnd_toStartOf="@+id/buttonTres"
        app:layout_constraintStart_toEndOf="@+id/buttonUno"
        app:layout_constraintTop_toBottomOf="@+id/buttonCinco" />

    <Button
        android:id="@+id/buttonCinco"
        android:layout_width="85dp"
        android:layout_height="75dp"
        android:text="5"
        app:layout_constraintBottom_toTopOf="@+id/buttonDos"
        app:layout_constraintEnd_toStartOf="@+id/buttonSeis"
        app:layout_constraintStart_toEndOf="@+id/buttonCuatro"
        app:layout_constraintTop_toBottomOf="@+id/buttonOcho" />

    <Button
        android:id="@+id/buttonCero"
        android:layout_width="85dp"
        android:layout_height="75dp"
        android:layout_marginBottom="124dp"
        android:text="0"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/buttonBorrar"
        app:layout_constraintStart_toEndOf="@+id/buttonResultado"
        app:layout_constraintTop_toBottomOf="@+id/buttonDos" />

    <Button
        android:id="@+id/buttonOcho"
        android:layout_width="85dp"
        android:layout_height="75dp"
        android:layout_marginTop="265dp"
        android:text="8"
        app:layout_constraintBottom_toTopOf="@+id/buttonCinco"
        app:layout_constraintEnd_toStartOf="@+id/buttonNueve"
        app:layout_constraintStart_toEndOf="@+id/buttonSiete"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/buttonUno"
        android:layout_width="85dp"
        android:layout_height="75dp"
        android:text="1"
        app:layout_constraintBottom_toTopOf="@+id/buttonResultado"
        app:layout_constraintEnd_toStartOf="@+id/buttonDos"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonCuatro" />

    <Button
        android:id="@+id/buttonSeis"
        android:layout_width="85dp"
        android:layout_height="75dp"
        android:text="6"
        app:layout_constraintBottom_toTopOf="@+id/buttonTres"
        app:layout_constraintEnd_toStartOf="@+id/buttonResta"
        app:layout_constraintStart_toEndOf="@+id/buttonCinco"
        app:layout_constraintTop_toBottomOf="@+id/buttonNueve" />

    <Button
        android:id="@+id/buttonSiete"
        android:layout_width="85dp"
        android:layout_height="75dp"
        android:layout_marginTop="265dp"
        android:text="7"
        app:layout_constraintBottom_toTopOf="@+id/buttonCuatro"
        app:layout_constraintEnd_toStartOf="@+id/buttonOcho"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/buttonCuatro"
        android:layout_width="85dp"
        android:layout_height="75dp"
        android:text="4"
        app:layout_constraintBottom_toTopOf="@+id/buttonUno"
        app:layout_constraintEnd_toStartOf="@+id/buttonCinco"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonSiete" />

    <Button
        android:id="@+id/buttonResultado"
        android:layout_width="85dp"
        android:layout_height="75dp"
        android:layout_marginBottom="124dp"
        android:text="Result"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/buttonCero"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonUno" />

    <Button
        android:id="@+id/buttonBorrar"
        android:layout_width="85dp"
        android:layout_height="75dp"
        android:layout_marginBottom="124dp"
        android:text="Borrar"
        android:textSize="10sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/buttonDivision"
        app:layout_constraintStart_toEndOf="@+id/buttonCero"
        app:layout_constraintTop_toBottomOf="@+id/buttonTres" />

    <Button
        android:id="@+id/buttonMultiplicacion"
        android:layout_width="70dp"
        android:layout_height="60dp"
        android:layout_marginTop="5dp"
        android:background="@android:color/holo_orange_light"
        android:backgroundTint="#FFFFFF"
        android:text="*"
        app:layout_constraintBottom_toTopOf="@+id/buttonDivision"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/buttonTres"
        app:layout_constraintTop_toBottomOf="@+id/buttonResta" />

    <Button
        android:id="@+id/buttonSuma"
        android:layout_width="70dp"
        android:layout_height="60dp"
        android:layout_marginTop="260dp"
        android:background="@color/teal_200"
        android:backgroundTint="#FFFFFF"
        android:text="+"
        app:layout_constraintBottom_toTopOf="@+id/buttonResta"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/buttonNueve"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/buttonResta"
        android:layout_width="70dp"
        android:layout_height="60dp"
        android:layout_marginTop="5dp"
        android:background="@android:color/holo_orange_light"
        android:backgroundTint="#FFFFFF"
        android:text="-"
        app:layout_constraintBottom_toTopOf="@+id/buttonMultiplicacion"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/buttonSeis"
        app:layout_constraintTop_toBottomOf="@+id/buttonSuma" />

    <Button
        android:id="@+id/buttonDivision"
        android:layout_width="70dp"
        android:layout_height="60dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="124dp"
        android:background="@android:color/holo_orange_light"
        android:backgroundTint="#FFFFFF"
        android:text="/"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/buttonBorrar"
        app:layout_constraintTop_toBottomOf="@+id/buttonMultiplicacion" />

    <TextView
        android:id="@+id/textoResultado"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="34sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.958"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.282" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Calculadora"
        android:textSize="48sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.043" />

    <TextView
        android:id="@+id/textViewProblema"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="34sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.959"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.173" />

</androidx.constraintlayout.widget.ConstraintLayout>